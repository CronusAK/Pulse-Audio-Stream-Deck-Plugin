{
  "Name": "PipeWire Audio Control",
  "Description": "Native PipeWire audio control for Linux — master volume, mic, and per-app control.",
  "Author": "sfgrimes",
  "Version": "0.1.12",
  "Icon": "icons/plugin",
  "Category": "Audio",
  "CategoryIcon": "icons/plugin",
  "CodePathLin": "index.js",
  "OS": [
    {
      "Platform": "linux",
      "MinimumVersion": "5.0"
    }
  ],
  "Software": {
    "MinimumVersion": "6.0"
